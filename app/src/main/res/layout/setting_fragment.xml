<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            style="@style/setting_widget_title"
            android:textColor="#000"
            android:text="安全设置"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:padding="6dp"
            android:background="@drawable/shape_setting_title_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_zero_setting"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >
                <TextView
                    style="@style/setting_widget_title"
                    android:text="数字锁"/>
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/setting_toggle_number"
                    style="@style/setting_widget_toggle"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#66000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >
                <TextView
                    style="@style/setting_widget_title"
                    android:text="手势锁"/>
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/setting_toggle_gesture"
                    style="@style/setting_widget_toggle"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
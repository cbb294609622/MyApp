<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_setting_title_bg"
            android:padding="6dp"
            android:text="安全设置"
            android:textColor="#000"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_zero_setting"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    style="@style/setting_widget_title"
                    android:text="数字锁" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/setting_toggle_number"
                    style="@style/setting_widget_toggle" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_below="@id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#66000000" />

            <RelativeLayout
                android:layout_below="@id/view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    style="@style/setting_widget_title"
                    android:text="手势锁" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/setting_toggle_gesture"
                    style="@style/setting_widget_toggle" />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_setting_title_bg"
            android:padding="6dp"
            android:text="浏览页面"
            android:textColor="#000"
            android:textSize="18sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_zero_setting"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_guide_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    style="@style/setting_widget_title"
                    android:text="引导界面" />
                <ImageView
                    style="@style/setting_widget_img"
                    android:src="@drawable/setting_select_img"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_below="@id/setting_guide_click"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#66000000" />

            <RelativeLayout
                android:id="@+id/setting_splash_click"
                android:layout_below="@id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    style="@style/setting_widget_title"
                    android:text="广告界面" />
                <ImageView
                    style="@style/setting_widget_img"
                    android:src="@drawable/setting_select_img"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>